{
    "$schema": "http://json.schemastore.org/template",
    "author": "stacks@ensono.com",
    "classifications": [
        "Stacks",
        "Service Bus",
        "Worker"
    ],
    "name": "Ensono Stacks Service Bus Worker",
    "identity": "Ensono.Stacks.ServiceBus.Worker.CSharp",
    "groupIdentity": "Ensono.Stacks.ServiceBus.Worker",
    "shortName": "stacks-asb-worker",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "xxENSONOxx.xxSTACKSxx",
    "preferNameDirectory": true,
    "symbols": {
        "domain": {
            "type": "parameter",
            "isRequired": true,
            "replaces": "Menu",
            "fileRename": "Menu",
            "defaultValue": "DOMAIN",
            "forms": {
                "global": [
                    "identity",
                    "lowerCase"
                ]
            }
        }
    },
    "sources": [
        {
            "source": "../../",
            "include": [
                "build/**",
                "deploy/**",
                "taskctl.yaml",
                "stackscli.yml",
                ".gitignore",
                ".gitattributes",
                "src/background-worker/**",
				"src/shared/xxENSONOxx.xxSTACKSxx.Shared.Application.CQRS.Abstractions/**",
				"src/shared/xxENSONOxx.xxSTACKSxx.Shared.Configuration/**",
				"src/shared/xxENSONOxx.xxSTACKSxx.Shared.Configuration.Tests/**",
				"src/shared/xxENSONOxx.xxSTACKSxx.Shared.Core/**",
				"src/shared/xxENSONOxx.xxSTACKSxx.Shared.Core.Tests/**",
				"src/shared/xxENSONOxx.xxSTACKSxx.Shared.Messaging.Azure.ServiceBus/**",
				"src/shared/xxENSONOxx.xxSTACKSxx.Shared.Messaging.Azure.ServiceBus.Tests/**",
				"src/shared/xxENSONOxx.xxSTACKSxx.Shared.Messaging.Commands/**",
				"src/shared/xxENSONOxx.xxSTACKSxx.Shared.Messaging.Events/**",
				"src/shared/xxENSONOxx.xxSTACKSxx.Shared.Messaging.Handlers/**"
            ],
            "exclude": [
                "**/[Bb]in/**",
                "**/[Oo]bj/**",
                "**/.template.config/**",
                "**/*.filelist",
                "**/*.user",
                "**/*.lock.json",
                "**/.git/**",
                "**/.vs/**",
                "**/.vscode/**",
                "_rels/**",
                "package/**",
                "**/*.nuspec",
                "*Content_Types*.xml",
                "**/build/azDevOps/aws/**",
                "**/build/azDevOps/gcp/**",
                "**/build/azDevOps/azure/ensono/**",
                "**/build/azDevOps/azure/ci-cqrs-vars.yml",
                "**/build/azDevOps/azure/ci-simple-api-vars.yml",
                "**/build/azDevOps/azure/ci-cosmosdb-worker-vars.yml",
                "**/build/azDevOps/azure/ci-asb-listener-vars.yml",
                "**/build/azDevOps/azure/ci-aeh-listener-vars.yml",
                "**/build/azDevOps/azure/ci-functions.yml",
                "**/build/github/**",
                "**/deploy/aws/**",
                "**/deploy/gcp/**"
            ],
            "rename": {
                "_gitignore": ".gitignore",
                "_gitattributes": ".gitattributes",
                "build/azDevOps/azure/ci-background-worker-vars.yml": "build/azDevOps/azure/ci-vars.yml"
            },
            "modifiers": []
        }
    ],
    "SpecialCustomOperations": {
        "**/*.yml": {
            "Operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "style": "line",
                        "token": "#"
                    }
                }
            ]
        }
    }
}
