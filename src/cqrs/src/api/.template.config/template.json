                }
            ],
            "args": {
                "solutionFolder": "Shared",
                "projectFiles": [
                    "xxAMIDOxx.xxSTACKSxx.Common.csproj",
                    "xxAMIDOxx.xxSTACKSxx.CQRS.csproj"
                ]
            },
            "actionId": "D396686C-DE0E-4DE6-906D-291CD29FC5DE",
